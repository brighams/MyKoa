{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "indent": [ "error", 2 ],
    "linebreak-style": [ "error", "windows" ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "never" ]
  }
}
